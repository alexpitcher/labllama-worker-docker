# .env.example

# Unique identifier for this worker instance (e.g., hostname or other unique string)
HOST_ID=local-worker

# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379

# (Optional) Discord webhook URL for batched alerts. Leave empty to disable.
DISCORD_WEBHOOK_URL=

# API key used to authenticate with your metrics/registration endpoint
API_KEY=test-api-key

# URL of the metrics ingestion endpoint (e.g., your server or mock server)
METRICS_URL=http://localhost:5000/api/metrics/batch

# Log level for the worker (e.g., DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO